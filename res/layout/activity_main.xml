<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".MainActivity" >

	<micropolis.android.MicropolisView 
		android:layout_width="match_parent" 
		android:layout_height="match_parent"
		android:id="@+id/main_view"
		/>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top|left"
		android:orientation="vertical"
		>

		<TextView android:id="@+id/date_ind"
			android:text=""
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/>

		<TextView android:id="@+id/funds_ind"
			android:text="@string/funds_ind_val"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/>

		<micropolis.android.DemandView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:id="@+id/demand_ind"
			/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:orientation="horizontal"
    		android:paddingBottom="@dimen/activity_vertical_margin"
    		android:paddingLeft="@dimen/activity_horizontal_margin"
    		android:paddingRight="@dimen/activity_horizontal_margin"
    		android:paddingTop="@dimen/activity_vertical_margin"
		>

		<ImageButton android:id="@+id/bulldozer_tool_btn"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/ic_dozer"
			android:onClick="onBulldozerToolClicked"
			/>

		<ImageButton android:id="@+id/road_tool_btn"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/ic_transport"
			android:onClick="onRoadToolClicked"
			/>

		<ImageButton android:id="@+id/rail_tool_btn"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/icrail"
			android:onClick="onRailToolClicked"
			/>

		<ImageButton android:id="@+id/wire_tool_btn"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/icwire"
			android:onClick="onWireToolClicked"
			/>

		<ImageButton android:id="@+id/res_tool_btn"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/ic_zones"
			android:onClick="onResZoneToolClicked"
			/>

		<ImageButton android:id="@+id/com_tool_btn"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/iccom"
			android:onClick="onComZoneToolClicked"
			/>

		<ImageButton android:id="@+id/ind_tool_btn"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/icind"
			android:onClick="onIndZoneToolClicked"
			/>

		<ImageButton android:id="@+id/coal_tool_btn"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/ic_buildings"
			android:onClick="onCoalToolClicked"
			/>

	<Button
		android:id="@+id/ok_btn"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:text="@string/tool_ok_btn"
		android:onClick="onOkClicked"
		android:visibility="gone"
		/>
	</LinearLayout>

</FrameLayout>

</FrameLayout>
