<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>

<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

<TableLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_weight="1"
	>

<TableRow>
<TextView
	android:text="Density:"
	/>
<TextView
	android:id="@+id/inspectdlg_density_lbl"
	android:text="Low"
	/>
</TableRow>

<TableRow>
<TextView
	android:text="Value:"
	/>
<TextView
	android:id="@+id/inspectdlg_value_lbl"
	android:text="Slum"
	/>
</TableRow>

<TableRow>
<TextView
	android:text="Crime:"
	/>
<TextView
	android:id="@+id/inspectdlg_crime_lbl"
	android:text="Safe"
	/>
</TableRow>

<TableRow>
<TextView
	android:text="Pollution:"
	/>
<TextView
	android:id="@+id/inspectdlg_pollution_lbl"
	android:text="Moderate"
	/>
</TableRow>

<TableRow>
<TextView
	android:text="Growth:"
	/>
<TextView
	android:id="@+id/inspectdlg_growth_lbl"
	android:text="Stable"
	/>
</TableRow>

</TableLayout>

<CheckBox
	android:id="@+id/inspectdlg_demolish_cb"
	android:text="Demolish this building"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	/>
</LinearLayout>

</FrameLayout>
